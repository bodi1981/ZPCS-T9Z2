@model EmailManager.Models.ViewModels.EmailViewModel

@{
    ViewBag.Title = "Sent";
    var htmlAtrribute = new { @class = "form-control", @readonly = "readonly" };
}

<h2 class="mb-2">@Model.Header</h2>

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("Sent", "Home"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            if (Model.Email.Id == 0)
            {
                <p class="alert alert-warning mt-4 mb-4">
                    Pola adresat, nadawca są wymagane.
                </p>
            }

            if (Model.Email.Id != 0)
            {
                htmlAtrribute = new { @class = "form-control", @readonly = "readonly" };
            }

            @Html.HiddenFor(m => m.Email.UserId)
            @Html.HiddenFor(m => m.Email.UserId);

            <form>
                <div class="mb-2">
                    @Html.LabelFor(m => m.Email.Sender)
                    @if (Model.Email.Id == 0)
                    {
                        @Html.TextBoxFor(m => m.Email.Sender, new { @class = "form-control", autofocus = "autofocus" })
                    }
                    else
                    {
                        @Html.TextBoxFor(m => m.Email.Sender, new { @class = "form-control", @readonly = "readonly" })
                    }
                    @Html.ValidationMessageFor(m => m.Email.Sender)
                </div>

                <div class="mb-2">
                    @Html.LabelFor(m => m.Email.Reciepient)
                    @if (Model.Email.Id == 0)
                    {
                        @Html.TextBoxFor(m => m.Email.Reciepient, new { @class = "form-control" })
                    }
                    else
                    {
                        @Html.TextBoxFor(m => m.Email.Reciepient, new { @class = "form-control", @readonly = "readonly" })
                    }
                    @Html.ValidationMessageFor(m => m.Email.Reciepient)
                </div>

                <div class="mb-2">
                    @Html.LabelFor(m => m.Email.Subject)
                    @if (Model.Email.Id == 0)
                    {
                        @Html.TextBoxFor(m => m.Email.Subject, new { @class = "form-control" })
                    }
                    else
                    {
                        @Html.TextBoxFor(m => m.Email.Subject, new { @class = "form-control", @readonly = "readonly" })
                    }
                </div>

                <div class="mb-2">
                    @Html.LabelFor(m => m.Email.Message)
                    @if (Model.Email.Id == 0)
                    {
                        @Html.TextAreaFor(m => m.Email.Message, new { @class = "form-control", @rows = "5" })
                    }
                    else
                    {
                        @Html.TextAreaFor(m => m.Email.Message, new { @class = "form-control", @readonly = "readonly", @rows = "5" })
                    }
                </div>

                @if (Model.Email.Id == 0)
                {
                    <button class="btn btn-primary" type="submit">
                        Wyślij
                    </button>
                }
            </form>
        }
    </div>
</div>